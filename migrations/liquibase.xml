<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="12302882018" author="Pavan and Pratibha">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="instance_tracker" schemaName="public"/>
            </not>
        </preConditions>
        <comment>Creating tracker table for tracked entity instance in public schema</comment>
        <sql>
            CREATE TABLE public.instance_tracker(
                patient_id text,
                instance_id text PRIMARY KEY,
                created_by text,
                created_date date,
                modified_by text,
                modified_date date
            );
        </sql>
    </changeSet>
</databaseChangeLog>